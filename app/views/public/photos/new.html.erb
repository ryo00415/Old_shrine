<h1 class="text-center mb-4">新規投稿</h1>

<%= form_with model: @photo, url: photos_path, html: { class: 'border p-4 rounded bg-light' } do |f| %>
  <div class="form-group">
    <%= f.label :商品画像, class: 'font-weight-bold' %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :商品名, class: 'font-weight-bold' %>
    <%= f.text_field :title, placeholder:"タイトル", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :説明, class: 'font-weight-bold' %>
    <%= f.text_area :caption, rows: 5, placeholder:"ここに説明文を記述します", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
  </div>
<% end %>
