<div class="row justify-content-center mt-3" style="margin-top: 4rem !important;">
  <div class="col-md-4 border rounded p-3">
    <h2>新規作成</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "フルネーム(漢字)", class: 'control-label col-sm-5' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name_kana, "フルネーム(カナ)", class: 'control-label col-sm-5' %>
        <div class="col-sm-10">
          <%= f.text_field :name_kana, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Eメール", class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: 'control-label col-sm-2' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字)</em>
        <% end %><br />
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード確認", class: 'control-label col-sm-5' %><br />
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "作成", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>
