<h2>会員情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "フルネーム(漢字)" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "フルネーム(カナ)" %><br />
    <%= f.text_field :name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %>（変更を保存するために必要）<br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
  
  <div class="field">
  <%= link_to "アカウントを削除", cancel_user_withdraw_path, class: 'btn btn-danger' %>
　</div>
<% end %>