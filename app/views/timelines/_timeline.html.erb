<!-- _timeline.html.erb -->
<div class="timeline">
  <!-- タイムラインの各投稿を表示するコード -->
  <% @timeline_posts.each do |post| %>
    <div class="post">
      <p class="post-author"><%= post.author.name %></p>
      <p class="post-content"><%= post.content %></p>
      <% if post.image.attached? %>
        <%= image_tag post.image %>
      <% end %>
      <p class="post-timestamp"><%= post.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
    </div>
  <% end %>
</div>